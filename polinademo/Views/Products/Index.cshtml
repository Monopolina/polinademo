@model IEnumerable<polinademo.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUnitOfMeasurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductMaxDiscountAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductManufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSupplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDiscountAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductQuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUnitOfMeasurement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMaxDiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductManufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSupplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPhoto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductArticleNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductArticleNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductArticleNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
